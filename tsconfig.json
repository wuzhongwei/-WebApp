{
  "compilerOptions": {
    "target": "es2021",
    "useDefineForClassFields": true,
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./tsbuild",
    "moduleResolution": "Node",
    "allowJs": true,
    "declaration": true,
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts"]
}
